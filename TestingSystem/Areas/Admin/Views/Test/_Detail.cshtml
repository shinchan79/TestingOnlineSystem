@model IEnumerable<TestingSystem.Models.TestResult>
@{
    ViewBag.Title = "_Detail";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    int stt = 0;
}
<section class="content-header">
    <h4>
        Candidates
    </h4>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
        <li class="active">Candidate</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="clearfix"></div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                @using (Html.BeginForm("Index", "Test", FormMethod.Post))
                {

                    <div class="row">
                        <div class="col-md-6" style="margin-bottom:15px">
                            <div class="input-group">
                                <input type="text" class="form-control" value="" name="KeySearch" placeholder="Key Search">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="submit">Search</button>
                                </span>
                            </div>
                        </div>
                    </div>
                }

                <form action="@Url.Action("Delete","TestResult")" id="form-delete" method="post">
                    <table id="example2" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Number</th>
                                <th>Test Name</th>
                                <th>Candidate</th>
                                <th>PassingScore</th>
                                <th>Score</th>
                                <th>Result</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                stt++;
                                <tr>

                                    <td>@stt</td>
                                    <td>
                                        @item.Test.TestName
                                    </td>
                                    <td>@item.Candidate.Users.Name</td>
                                    <td>
                                        @item.Test.PassingScore
                                    </td>
                                    <td>
                                        @(item.Score * 10)
                                    </td>
                                    @{

                                        int a;
                                        Int32.TryParse(item.Test.PassingScore, out a);
                                        if (item.Score * 10 > a)
                                        {
                                            <td>
                                                Đỗ
                                            </td>
                                        }
                                        else
                                        {
                                            <td>
                                                Trượt
                                            </td>
                                        }
                                    }

                                </tr>
                            }
                        </tbody>
                    </table>
                    <a onclick="return confirm('Are you sure you want to delete multiple exams ?');">
                        <button type="submit" class="btn btn-danger" id="btn-delete" disabled>Delete</button>
                    </a>

                </form>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
    <!-- /.row -->
</section>
<!-- /.content -->
